{
  "$schema": "https://opencode.ai/config.json",
  "permission": {
    "bash": {
      // "*": "ask",
      "git commit *": "ask",
      "git push *": "ask",
      "rm *": "ask"
    }
  },
  "agent": {
    "ask": {
      "description": "Read-only agent for exploration and analysis - cannot make file changes",
      "mode": "primary",
      "prompt": "{file:./prompts/ask.txt}",
      "permission": {
        "edit": "deny",
        "bash": {
          "*": "allow",
          "rm *": "ask",
          "git commit *": "ask",
          "git push *": "ask",
          "npm install *": "ask",
          "npm uninstall *": "ask",
          "yarn install *": "ask",
          "yarn remove *": "ask"
        },
        "write": "deny"
      }
    }
  },
  "mcp": {
    "jira": {
      "type": "remote",
      "url": "https://mcp.atlassian.com/v1/mcp",
      "oauth": {}
    },
    "playwright": {
      "type": "local",
      "command": [
        "npx",
        "@playwright/mcp@latest"
      ],
      "enabled": true
    }
  }
}
