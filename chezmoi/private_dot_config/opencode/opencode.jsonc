{
  "$schema": "https://opencode.ai/config.json",
  "permission": {
    "bash": {
      // "*": "ask",
      "git commit *": "ask",
      "git push *": "ask",
      "rm *": "ask"
    }
  },
  "agent": {
    "ask": {
      "description": "Ask questions and get answers without making changes",
      "mode": "primary",
      "permission": {
        "edit": "ask",
        "bash": "ask",
        "write": "ask"
      }
    }
  },
  "mcp": {
    "jira": {
      "type": "remote",
      "url": "https://mcp.atlassian.com/v1/mcp",
      "oauth": {}
    },
    "playwright": {
      "type": "local",
      "command": [
        "npx",
        "@playwright/mcp@latest"
      ],
      "enabled": true
    }
  }
}
